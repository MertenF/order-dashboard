#:kivy 2.1.0

<StatusBar>:
    size_hint: (1, 0.1)
    
    canvas.before:
        Color:
            rgba: 0.2, 0.2, 0.2, 1
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        text: str(root.clock)
        font_size: 80
    TextInput:
        id: order_input
        text: ''
        multiline: False
        font_size: 80
        background_color: 0.4, 0.4, 0.4, 1
        text_validate_unfocus: False
        focus: True
    Label:
        id: stat_label
        text: 'Order num'

<ProductLabel>:
    text_size: self.size
    halign: 'left'
    valign: 'center'
    
<AmountLabel>:
    text_size: self.size
    halign: 'right'
    valign: 'center'
    
<RefreshBar>:
    max: 10
    
<RootWidget>:
    orientation: vertical

